# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# This file serves as a template for environment variables.
# Copy this file to .env and fill in the actual values.
# NEVER commit .env to version control - only .env.example should be committed.

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection settings
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Alternative format: postgresql+asyncpg://user:password@localhost:5432/dbname

# Database connection pool settings (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Secret key for JWT tokens and other cryptographic operations
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# JWT settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================================================
# MCP (Model Context Protocol) INTEGRATION
# =============================================================================
# Enable/disable MCP features
MCP_ENABLED=true

# MCP server configuration
MCP_SERVER_URL=http://localhost:8080

# =============================================================================
# CLICKUP INTEGRATION
# =============================================================================
# ClickUp API token for project management integration
# Get from: https://app.clickup.com/settings/apps
CLICKUP_API_TOKEN=

# ClickUp workspace ID
CLICKUP_WORKSPACE_ID=

# ClickUp team ID
CLICKUP_TEAM_ID=

# =============================================================================
# GOOGLE DRIVE INTEGRATION
# =============================================================================
# Google Drive API credentials
# Use service account JSON file path (recommended) or individual fields

# Option 1: Service account JSON file path (recommended)
GDRIVE_SERVICE_ACCOUNT_PATH=./credentials/google-service-account.json

# Option 2: Individual credential fields (alternative)
GDRIVE_CLIENT_ID=
GDRIVE_CLIENT_SECRET=
GDRIVE_REFRESH_TOKEN=
GDRIVE_ACCESS_TOKEN=

# Google Drive folder ID for file storage
GDRIVE_FOLDER_ID=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable debug mode (development only)
DEBUG=true

# Enable hot reload (development only)
HOT_RELOAD=true

# Enable API documentation (development/staging)
ENABLE_DOCS=true

# =============================================================================
# EXTERNAL SERVICES (Add as needed)
# =============================================================================
# Email service (e.g., SendGrid, Mailgun)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@yourapp.com

# File storage (e.g., AWS S3, Google Cloud Storage)
STORAGE_BUCKET_NAME=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=

# Analytics (e.g., Google Analytics, Mixpanel)
ANALYTICS_TRACKING_ID=

# =============================================================================
# NOTES FOR DEVELOPERS
# =============================================================================
# 1. Copy this file to .env and fill in actual values
# 2. Never commit .env to version control
# 3. Use strong, unique values for all secrets
# 4. Rotate secrets regularly in production
# 5. Use different values for different environments
# 6. For MCP integrations, ask user for approval before proceeding
# 7. Google Drive credentials should use service account JSON file when possible